<% content_for :editor do %>
	<%= form_tag("", method: 'post', :id => 'form-editor') do %>
		<% if @content != "" %>
			<%= text_area_tag(:editor, @content) %> <br>
		<% else %>
			<%= text_area_tag(:editor, "") %> <br>
		<% end %>
		<%= submit_tag 'The Submit button', {class: 'btn btn-default'} %>
		<%= bootstrap_flash %>
	<% end %>
<% end %>

